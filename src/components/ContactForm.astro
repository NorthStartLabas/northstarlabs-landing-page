---
// Contact form with client-side validation
---

<div class="w-full max-w-3xl mx-auto">
  <h3 class="mb-4">Contactformulier</h3>
  <p class="text-black/60 mb-12 text-lg">Laat hieronder je gegevens achter en we nemen zo snel mogelijk contact met je op.</p>
  
  <form id="contact-form" class="space-y-6">
    <div class="grid md:grid-cols-2 gap-6">
      <div class="group">
        <label for="name" class="block text-sm font-medium mb-3 text-black/80">
          Naam *
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-5 py-4 border border-black/10 rounded-xl focus:border-black focus:outline-none focus:ring-2 focus:ring-black/5 transition-all duration-200 bg-white hover:border-black/20"
          placeholder="Je volledige naam"
        />
      </div>

      <div class="group">
        <label for="email" class="block text-sm font-medium mb-3 text-black/80">
          E-mail *
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-5 py-4 border border-black/10 rounded-xl focus:border-black focus:outline-none focus:ring-2 focus:ring-black/5 transition-all duration-200 bg-white hover:border-black/20"
          placeholder="je@email.com"
        />
      </div>
    </div>

    <div class="group">
      <label for="company" class="block text-sm font-medium mb-3 text-black/80">
        Bedrijf
      </label>
      <input
        type="text"
        id="company"
        name="company"
        class="w-full px-5 py-4 border border-black/10 rounded-xl focus:border-black focus:outline-none focus:ring-2 focus:ring-black/5 transition-all duration-200 bg-white hover:border-black/20"
        placeholder="Je bedrijfsnaam (optioneel)"
      />
    </div>

    <div class="group">
      <label for="message" class="block text-sm font-medium mb-3 text-black/80">
        Bericht *
      </label>
      <textarea
        id="message"
        name="message"
        required
        rows="6"
        class="w-full px-5 py-4 border border-black/10 rounded-xl focus:border-black focus:outline-none focus:ring-2 focus:ring-black/5 transition-all duration-200 bg-white resize-none hover:border-black/20"
        placeholder="Vertel ons over je project of vraag..."
      ></textarea>
    </div>

    <div id="form-message" class="hidden text-sm rounded-xl" role="alert"></div>

    <button
      type="submit"
      class="px-8 py-5 bg-black text-white text-lg font-medium rounded-full hover:bg-black/80 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed hover:scale-105 hover:shadow-xl"
    >
      Versturen
    </button>
  </form>
</div>

<script>
  import emailjs from '@emailjs/browser';

  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message') as HTMLDivElement;
  const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;

  // Initialize EmailJS (you'll need to set these in your environment variables)
  const EMAILJS_SERVICE_ID = import.meta.env.PUBLIC_EMAILJS_SERVICE_ID || '';
  const EMAILJS_TEMPLATE_ID = import.meta.env.PUBLIC_EMAILJS_TEMPLATE_ID || '';
  const EMAILJS_PUBLIC_KEY = import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY || '';

  if (EMAILJS_PUBLIC_KEY) {
    emailjs.init(EMAILJS_PUBLIC_KEY);
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Disable button and show loading state
    submitButton.disabled = true;
    submitButton.textContent = 'Versturen...';
    messageDiv.classList.add('hidden');

    // Get form data
    const formData = new FormData(form);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const company = formData.get('company') as string;
    const message = formData.get('message') as string;

    // Validate
    if (!name || !email || !message) {
      messageDiv.textContent = 'Naam, e-mail en bericht zijn verplicht.';
      messageDiv.className = 'text-sm text-red-800 bg-red-50 p-5 border border-red-200 rounded-xl';
      messageDiv.classList.remove('hidden');
      submitButton.disabled = false;
      submitButton.textContent = 'Versturen';
      return;
    }

    // If EmailJS is not configured, show fallback
    if (!EMAILJS_SERVICE_ID || !EMAILJS_TEMPLATE_ID || !EMAILJS_PUBLIC_KEY) {
      // Fallback: open mailto link
      const subject = encodeURIComponent(`Contactformulier: ${name}`);
      const body = encodeURIComponent(
        `Naam: ${name}\nE-mail: ${email}\nBedrijf: ${company || 'Niet opgegeven'}\n\nBericht:\n${message}`
      );
      window.location.href = `mailto:liviu@northstarlabs.nl?subject=${subject}&body=${body}`;
      messageDiv.textContent = 'Je e-mailclient wordt geopend. Als dit niet werkt, stuur een e-mail naar liviu@northstarlabs.nl';
      messageDiv.className = 'text-sm text-blue-800 bg-blue-50 p-5 border border-blue-200 rounded-xl';
      messageDiv.classList.remove('hidden');
      submitButton.disabled = false;
      submitButton.textContent = 'Versturen';
      return;
    }

    try {
      const templateParams = {
        from_name: name,
        from_email: email,
        company: company || 'Niet opgegeven',
        message: message,
        to_email: 'liviu@northstarlabs.nl',
      };

      await emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, templateParams);

      // Success
      messageDiv.textContent = 'Bericht succesvol verzonden! We nemen zo snel mogelijk contact met je op.';
      messageDiv.className = 'text-sm text-green-800 bg-green-50 p-5 border border-green-200 rounded-xl';
      messageDiv.classList.remove('hidden');
      form.reset();
    } catch (error) {
      console.error('EmailJS error:', error);
      messageDiv.textContent = 'Er is een fout opgetreden. Probeer het later opnieuw of stuur een e-mail naar liviu@northstarlabs.nl';
      messageDiv.className = 'text-sm text-red-800 bg-red-50 p-5 border border-red-200 rounded-xl';
      messageDiv.classList.remove('hidden');
    } finally {
      submitButton.disabled = false;
      submitButton.textContent = 'Versturen';
    }
  });
</script>
